<div class="laptop">
  <div class="laptop__glow"></div>
  <img
    src="/assets/levels/laptopcita.png"
    alt="Portátil moderno abierto mostrando la interfaz de la aplicación Roadmap sobre fondo neutro"
    class="laptop__image"
    loading="lazy"
  />
</div>

<style>
  .laptop {
    --laptop-size: min(50rem, 90vw);
    
    position: relative;
    width: var(--laptop-size);
    height: var(--laptop-size);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  /* Subtle glow behind laptop */
  .laptop__glow {
    position: absolute;
    inset: 10%;
    background: radial-gradient(
      circle,
      rgba(0, 234, 255, 0.15) 0%,
      transparent 70%
    );
    filter: blur(40px);
    pointer-events: none;
    z-index: -1;
  }

  .laptop__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    transition: transform 0.4s ease-out;
    will-change: transform;
  }

  /* Subtle hover effect */
  .laptop:hover .laptop__image {
    transform: scale(1.02);
  }

  @media (width < 1190px) {
    .laptop {
      --laptop-size: min(350px, 85vw);
      height: auto;
      aspect-ratio: 1;
    }
  }
</style>
