---
import "./roadmap-card.css"

const { title, description, level, banner, slug, modules } = Astro.props;


const levelStyle = [
    { level: "Web", color: "0, 242, 255", icon: "streamline:web-solid" },
    { level: "Design", color: "255, 99, 0", icon: "iconoir:design-nib-solid" },
    { level: "Mobile", color: "247, 0, 182", icon: "tabler:device-mobile-code" },
];


const levelColor = levelStyle.find((l) => l.level === level)?.color;
const levelIcon = levelStyle.find((l) => l.level === level)?.icon;


---

<article class="roadmap-card"  style={`--color-render: ${levelColor ?? '120, 144, 156'}`}>
    <div class="card-container">
        <div class="banner-container">
            <img src={banner} alt={`Portada del roadmap de ${title}`} class="card-icon">
        </div>
        <div class="card-content">
           <a href={`/courses/${slug}`}>
            <h3>{title}</h3>
        </a>
            <p>{description}</p>
        </div>
    </div>
    <footer class="card-footer">
                <div
                    class="card-level"

                >
            <iconify-icon icon={levelIcon ?? 'mdi:chart-timeline'} width="15" height="15"/>
            <span>{level}</span>
        </div>
        <div class="card-modules"><iconify-icon icon="teenyicons:layers-solid" width="15" height="15"></iconify-icon><span>{`Courses: ${modules}`}</span></div>
    </footer>
</article>