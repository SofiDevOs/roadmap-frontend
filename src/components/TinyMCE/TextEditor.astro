---

const { id, value } = Astro.props;

---

<textarea {...Astro.props} set:html={value}>
</textarea>

<script is:inline define:vars={{id}}>
  tinymce.init({
    selector: `#${id}`,
    height: 500,
    plugins: [
      "advlist",
      "autolink",
      "lists",
      "link",
      "charmap",
      "preview",
      "anchor",
      "visualblocks",
      "fullscreen",
      "insertdatetime",
      "media",
      "table",
      "help",
      "wordcount",
    ],
    menubar: "format insert table",
    toolbar:
      "undo redo | blocks | " +
      "bold italic backcolor | alignleft aligncenter " +
      "alignright alignjustify | bullist numlist outdent indent | " +
      "removeformat | help",
    content_style:
      "body { font-family:Helvetica,Arial,sans-serif; color:white; } svg { fill: white; }",
  });
</script>


<style is:inline>
    .tox-promotion{
        display: none !important;
    }
    .tox .tox-tbtn svg {
        fill: white;
    }
    .tox-toolbar__group{
        gap: 0.5rem;
    }
    .tox-statusbar__branding{
        display: none !important;
    }
    .tox-edit-area,.tox-editor-header, .tox:not(.tox-tinymce-inline) .tox-editor-header, .tox .tox-menubar, .tox .tox-toolbar,.tox .tox-toolbar__overflow,.tox .tox-toolbar__primary,.tox .tox-edit-area__iframe, .tox-tinymce,.tox .tox-promotion {
        background-color: #1e1e2f!important;
        border-color: #4c4c73!important;
        color: white;
    }
    .tox .tox-collection--list .tox-collection__item--enabled:not(.tox-collection__item--state-disabled){
        background-color: #4c4c73!important;
    }
    .tox .tox-menu{
        background-color: #2e2e42!important;
        border-color: #4c4c73!important;
        color: white;
    }
    .tox .tox-tbtn:hover{
        background-color: #4c4c73!important;
        color: white!important;
        & svg {
            fill: white!important;
        }
    }
    .tox .tox-statusbar{
        background-color: #1e1e2f!important;
        border-color: #4c4c73!important;
        color: white;
        align-items: flex-start!important;
        padding: 1rem!important;
        height: 8dvh!important;
    }

</style>
