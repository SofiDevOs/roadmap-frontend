---
interface Props {
    title: string;
    description: string;
    imageSrc: string;
    class?: string;
}


const { title, description, imageSrc="/assets/avatares/man-avatar.png", class: className, ...rest } = Astro.props;

---

<div class={`card-container  ${className}`} {...rest}>
    <article class="card-about">
        <div class="card-content">
            <h2>{title}</h2>
            <p>{description}</p>
            <img src={imageSrc} alt={title}>
        </div>
    </article>
</div>


