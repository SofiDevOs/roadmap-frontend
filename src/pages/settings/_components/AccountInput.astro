---
const { label, value, name, type = "text", color = "#fff" } = Astro.props;
---

<label for="username">{label}</label>
<div class="input-group">
  <input {type} {name} {value}  hidden />
  <p><slot/></p>
  <button id="username">
    <iconify-icon icon="icon-park-twotone:edit" width="24" height="24"  style={`color: ${color};pointer-events: none;`}></iconify-icon>
  </button>
</div>

<style>
  .input-group {
    display: flex;
    align-items: center;
    max-width: 300px;
    gap: 0.5rem;

    & button {
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      &:hover {
        opacity: 0.7;
      }

      &::after:hover {
        content: 'Editar';
        display: block;
        width: 24px;
        height: 24px;
      }
    }
  }
</style>


