const sectionedLessons = lessons.reduce(
  (acc, lesson) => {
    if (!acc[lesson.section]) {
      acc[lesson.section] = {
        title:
          sectionTitles[lesson.section as keyof typeof sectionTitles] ||
          `Secci贸n ${lesson.section}`,
        lessons: [],
      };
    }
    acc[lesson.section].lessons.push(lesson);
    return acc;
  },
  {} as Record<number, { title: string; lessons: typeof lessons }>
);
---

<Layout>
  <section class="course-detail">
    <div class="main-content">
      <div class="info-container">
        <div class="title-container">
          <img src={icon} alt={title} width="50" height="50" />
          <h1 class="title-primary">{title}</h1>
        </div>
        <div class="info-tags">
          <p class="tag"><EggEasy /> Nivel: {courseData.difficulty}</p>
          <p class="tag">
            <ClockIcon width="15" height="15" />Duraci贸n: 4 horas
          </p>
          <p class="tag">
            <LayersIcon width="15" height="15" /> Clases: {lessons.length}
          </p>
        </div>
        <div class="description" set:html={courseData.description}>
        </div>

      </div>
      <div class="lessons">
        {
          Object.entries(sectionedLessons).map(([sectionNumber, section]) => (
            <div class="section">
              <h3 class="title-quaternary">{section.title}</h3>
              <LessonList lessons={section.lessons} course={curso ?? ""} />
            </div>
          ))
        }
      </div>
    </div>
    <div class="trailer">
      <iframe
        width="100%"
        height="280"
        src="https://www.youtube.com/embed/S0jeLocArZE?si=MEsfv2Hnyuwmp6Jq"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
      <div class="action-btns">
        <a class="action-btn" href={`/cursos/${curso}/1`}>Comenzar curso</a>
      </div>
    </div>
  </section>
</Layout>

