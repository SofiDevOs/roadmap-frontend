---
import Layout from "@layouts/Layout.astro";
import LessonList from "./_components/LessonList.astro";
import ClockIcon from "../_assets/ClockIcon.astro";
import LayersIcon from "../_assets/LayersIcon.astro";
import EggEasy from "@shared/assets/icons/EggEasy.astro";
import cardsData from "@shared/data/cards-data.json"

interface CourseDetail {
  title: string;
  href: string;
  thumbnail: string;
  duration: string;
  position: number;
  section: number;
  description: string;

}
const { curso } = Astro.params;


const getCourseData = (courseSlug: string) => {
  const course = cardsData.find(
    (card) => card.href === `/${courseSlug}`
  );
  return course;
};

const courseData = getCourseData(curso ?? "");
if (!courseData) {
  throw new Error(`Curso no encontrado: ${curso}`);
}

const { title, icon } = courseData;
const sectionTitles = {
