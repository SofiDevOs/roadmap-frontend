---
import BaseHead from "../../layouts/BaseHead.astro";
import "./_style.css"
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import SideBar from "./_components/SideBar.astro";
import Image from "astro/components/Image.astro";
import ToastAlert from "@components/ToastAlert.astro";
import NavBar from "./_components/NavBar.astro";

const {
  title,
  description,
  image = "/images/portada.png",
  buttonContent = "Agregar Roadmap",
  buttonUrl = "/dashboard/roadmaps/create",
} = Astro.props;
const logo = "/images/sofilogo.png";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body>
    <div class="dashboard-layout">
      <SideBar>
        <NavBar slot="navmenu" pathName={Astro.url.pathname} />
      </SideBar>
      <header class="dashboard-header">
          <a href="/">
            <Image src={logo} alt="Sofi Logo" width={60} height={60} />
          </a>
          <a class="dashboard-button" href={buttonUrl}>
            {buttonContent}
          </a>
      </header>

      <main>
        <slot />
        <ToastAlert absolute />
      </main>
    </div>
  </body>
</html>
