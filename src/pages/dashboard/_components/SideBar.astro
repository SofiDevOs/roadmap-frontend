---
import UserHeader from "./UserHeader.astro";

const { user } = Astro.locals

const avatar = user.avatar_url
  ? user.avatar_url
  : "https://www.shareicon.net/data/512x512/2016/05/24/770117_people_512x512.png"

---
<aside class="sidebar active">
  <UserHeader {...user} {avatar} />
  <slot name="navmenu"/>
  <footer class="sidebar-footer">
    <a href="/settings">
    <iconify-icon icon="solar:settings-bold-duotone" width="24" height="24"></iconify-icon>
      <span class="text">Ajustes</span></a>
    <a class="logout" href="/logout">
    <iconify-icon icon="majesticons:logout" width="24" height="24"></iconify-icon>
      <span class="text">Salir</span></a>
  </footer>
</aside>

<style>
.sidebar {
    grid-area: sidebar;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
    background-color: var(--bg-color);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: var(--sidebar-padding, 2rem);
    border-right: 1px solid #e6e0ee14;
    overflow: hidden;

    .sidebar-menu ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .menu-link {
      display: block;

      padding: 0.5rem 1rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      &:hover, &.active {
        background: var(--secondary-color);
        border-radius: 20px;
      }
    }
    .sidebar-menu ul li a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      min-height: 6vh;

    }
    .sidebar-footer {
      margin-top: auto;
      padding: 1rem;
    }
}

footer a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
    padding: 1.5rem 1rem;
    border-radius: 20px;
    &:hover {
      background: var(--secondary-color);
      color: var(--accent-color);
    }
}

</style>
<style is:global>
@media (width >= 768px) {
  .sidebar:not(.active) .sidebar-footer {
    a {
      justify-content: center;
      padding-top: 1rem;
    }
    a .text {
        display: none;
    }
  }
}
</style>
<script is:inline>
const sidebar = document.querySelector('.sidebar');
const width = document.body.offsetWidth

if (width < 768) {
  sidebar.classList.remove('active');
}
</script>
