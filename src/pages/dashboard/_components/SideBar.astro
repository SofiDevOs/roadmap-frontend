---
import UserHeader from "./UserHeader.astro";

const { user } = Astro.locals

const avatar = user.avatar_url
  ? user.avatar_url
  : "https://www.shareicon.net/data/512x512/2016/05/24/770117_people_512x512.png"


---

<aside class="sidebar">
  <UserHeader {...user} {avatar} />
  <slot name="navmenu"/>

  <footer class="sidebar-footer">
    <a href="/logout">Logout</a>
  </footer>
</aside>


<style>
  .sidebar {
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
    background-color: var(--bg-color);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    border-right: 1px solid #e6e0ee14;
    @media (max-width: 768px) {
      overflow: hidden;

    }

    .sidebar-menu ul {
      display: flex;
      flex-direction: column;
    }
    .menu-link {
      display: block;

      padding: 2rem 1rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      &:hover, &.active {
        background: #ffffff17;
        border-radius: 20px;
      }
    }
    .sidebar-menu ul li a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      min-height: 6vh;

      &.active {
        //background: #3a2c538a;
      }
    }
    .sidebar-footer {
      margin-top: auto;
      padding: 1rem;
    }
  }
</style>
