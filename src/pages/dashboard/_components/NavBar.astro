      <a
        class="menu-link"
        href="/dashboard/"
        data-astro-prefetch
        data-astro-prefetch="hover"
        ><iconify-icon
          icon="duo-icons:certificate"
          width="24"
          height="24"
          style="color: #14e665"></iconify-icon>Certificados</a
      >
    </li>
