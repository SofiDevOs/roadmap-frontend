---
const { username, avatar } = Astro.props;
---

<header class="profile-header">
  <div class="avatar-container">
    <img src={avatar} alt={username} class="avatar-image" />
  </div>
  <a href="dashboard/edit">
    <span class="avatar-tooltip"
      ><iconify-icon
        icon="hugeicons:user-edit-01"
        width="24"
        height="24"
        style="color: #3cff0f"></iconify-icon></span
    >
  </a>
  <span class="avatar-username">{username}</span>
</header>

<style>
  .profile-header {
    --level-color: rgb(7, 255, 152);
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position: relative;
    padding: 1rem;
    gap: 1rem;

    .avatar-container {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      padding: 0.5rem;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      border: double 1px var(--level-color);

      .avatar-image {
        object-fit: cover;
        width: 100%;
        height: 100%;
      }
    }
  }

  .avatar-tooltip {
    transform: translateY(-50%);
    position: absolute;
    display: none;
    top: 50%;
    left: 100%;
    padding: 0.5rem 1rem;
    background: #8751e9;
    color: white;
    font-size: 1rem;
    transition: opacity 0.4s ease;
    border-radius: 3px;
    min-width: fit-content;
    text-wrap: nowrap;
  }
  .profile-header:hover .avatar-tooltip {
    display: block;
    opacity: 1;
  }
  .avatar-username {
    color: white;
    font-weight: 600;
    font-size: 2rem;
  }
</style>
