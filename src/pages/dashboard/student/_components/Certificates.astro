---
const image = "/images/certs-group.png";
---

<div class="card-container">
  <img src={image} alt="Certificates Group" />
  <a href="/dashboard/student/certificates" class="dashboard-button">
    Ver mis certificados
  </a>
</div>

<style>
  .card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 1rem;
    overflow-x: auto;
    padding: 1rem 0;
    overflow: hidden;
  }
  img {
    width: 100%;
    max-width: 300px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  img:hover {
    transform: scale(1.05);
    transition: transform 0.3s ease-in-out;
  }
  a{
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #ffd60a48;
    color:#FFD60A;
    border: 1px solid #FFD60A;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
  }
  a:hover {
    background-color: ;
    transition: background-color 0.3s ease-in-out;
  }
</style>
