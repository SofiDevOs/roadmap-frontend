---
import LayoutStudents from "../_LayoutStudents.astro";
import CertificatesGrid from "./_components/certificates/CertificatesGrid.astro";
import Certificate from "./_components/certificates/Certificate.astro";
import certData from "../../../shared/data/certificate-data.json";
import CertificateModal from "./_components/certificates/CertificateModal.astro";

interface CertData {
  image: string;
  title: string;
  description: string;
  issuedAt: string;
}

const certificates = certData as CertData[];
---

<LayoutStudents>
  <section class="certificates">
    <h1 class="title-primary">Certificados</h1>
    <CertificatesGrid>
      {certificates.map((certificate) => <Certificate {...certificate} />)}
    </CertificatesGrid>

  </section>
</LayoutStudents>

<CertificateModal />
<style>
  .certificates {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 5rem;
  }
</style>
